<!-- views/users.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .card {
            width: 18rem;
            margin-bottom: 20px;
        }
        .card-img-top {
            width: 100%;
            height: 200px; /* Atur tinggi gambar */
            object-fit: cover;
        }
    </style>
</head>
<body>
    <%- include('_navbar') %>
    <div class="container">
        <h1 class="mt-5 mb-4">All Users</h1>
        <form action="/users" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search by username" name="username">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>
        <div class="row">
            <% users.forEach(user => { %>
                <div class="col-md-4">
                    <div class="card">
                        <% if (user.Profile && user.Profile.avatarUrl) { %>
                            <img src="<%= user.Profile.avatarUrl %>" class="card-img-top" alt="Avatar">
                        <% } else { %>
                            <img src="https://builtprefab.com/wp-content/uploads/2019/01/cropped-blank-profile-picture-973460_960_720-300x300.png" class="card-img-top" alt="Placeholder">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title">Username: <%= user.username %></h5>
                            <a href="/users/<%= user.id %>" class="btn btn-primary">View More</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
