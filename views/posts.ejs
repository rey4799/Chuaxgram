<!-- views/posts.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .card-wrapper {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .card {
            width: 72%; /* Mengatur lebar card */
            border: 1px solid #ccc;
            border-radius: 10px;
            overflow: hidden;
        }

        .card-img-top {
            width: 100%;
            height: 500px; /* Atur tinggi gambar */
            object-fit: cover;
        }
    </style>
</head>
<body>
    <%- include('_navbar') %>
    <div class="container">
        <h1 class="mt-5 mb-4">All Posts</h1>
        <a href="/posts/new" class="btn btn-primary mb-4">Add Post</a> <!-- Tambahkan tombol Add Post -->
        <div class="card-wrapper">
            <% posts.forEach(post => { %>
                <div class="card">
                    <img src="<%= post.imgUrl %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.title %></h5>
                        <p class="card-text"><%= post.content %></p>
                        <p class="card-text">Username: <%= post.User.username %></p>
                        <p class="card-text"><%= post.createdAt%></p> 
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
